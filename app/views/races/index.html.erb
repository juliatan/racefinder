<p>Map</p>
<div id='map'></div>

<script>
$(document).ready(function(){

	var map = new GMaps({
	  div: '#map',
	  lat: 0,
	  lng: 0
	});

	GMaps.geocode({
	  address: 'Buckingham Palace',
	  callback: function(results, status) {
	    if (status == 'OK') {
	      var latlng = results[0].geometry.location;
	      map.setCenter(latlng.lat(), latlng.lng());
	      map.addMarker({
	        lat: latlng.lat(),
	        lng: latlng.lng()
	      });
	    }
	  }
	});

})
</script>